################################################################################
# NEXUZAP - Exemplo de Arquivo .env
# Copie este arquivo e configure conforme seu ambiente
################################################################################

#------------------------------------------------------------------------------
# BACKEND (.env)
#------------------------------------------------------------------------------

# URL do WhatsApp Service (não altere se estiver na mesma máquina)
WHATSAPP_SERVICE_URL=http://127.0.0.1:3002

# MongoDB Connection String
# Local: mongodb://localhost:27017
# Remoto: mongodb://usuario:senha@host:porta
MONGO_URL="mongodb://localhost:27017"

# Nome do banco de dados
DB_NAME="nexuzap_production"

# CORS Origins (domínios permitidos, separados por vírgula)
# Adicione seu domínio aqui
CORS_ORIGINS=http://localhost:3000,http://seudominio.com,https://seudominio.com

# JWT Secret (gere um valor aleatório seguro)
# Comando: openssl rand -hex 32
JWT_SECRET=sua_chave_secreta_jwt_aqui

#------------------------------------------------------------------------------
# FRONTEND (.env)
#------------------------------------------------------------------------------

# URL do Backend API
# Em produção: http://seudominio.com:8001 ou https://seudominio.com/api
REACT_APP_BACKEND_URL=http://localhost:8001

# Porta do frontend (padrão React: 3000)
PORT=3000

# WebSocket (apenas se usando proxy)
# WDS_SOCKET_PORT=443

#------------------------------------------------------------------------------
# VARIÁVEIS DO SISTEMA (Opcional)
#------------------------------------------------------------------------------

# Porta do WhatsApp Service
WHATSAPP_PORT=3002

# Porta do Backend
BACKEND_PORT=8001

# Porta do Frontend
FRONTEND_PORT=3000

#------------------------------------------------------------------------------
# NOTAS IMPORTANTES
#------------------------------------------------------------------------------
# 
# 1. NUNCA commit este arquivo com valores reais no Git
# 2. Use .env.example como template
# 3. Gere JWT_SECRET único: openssl rand -hex 32
# 4. Em produção, use HTTPS sempre que possível
# 5. Configure CORS_ORIGINS com seus domínios reais
#